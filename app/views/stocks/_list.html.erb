<table class='table table-stripped'>
    <thead>
        <tr>
            <th>Name</th>
            <th>Ticker</th>
            <th>Lastest price</th>
            <% if @user.id == current_user.id %>
                <th>Action</th>
            <% end %>
        </tr>
    </thead>
    <tbody>
        <% @user_stocks.each do |stock| %>
            <tr>
                <td><%= stock.name %></td>
                <td><%= stock.ticker %></td>
                <td><%= stock.latest_price %></td>
                <% if @user.id == current_user.id %>
                    <td>
                        <%= link_to 'Delete stock', user_stock_path(stock), method: :delete,
                            data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
                    </td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>